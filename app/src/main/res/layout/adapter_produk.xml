<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linProduct"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:padding="10dp"
    >
    <TextView
        android:id="@+id/txvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        tools:text="Bakso Mana Lagi"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:gravity="center"
        />
    <com.infinityandroid.roundedimageview.RoundedImageView
        android:id="@+id/imvImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/img_no_image"
        app:corner_radius="10"
        />
    <TextView
        android:id="@+id/txvPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txvName"
        android:padding="5dp"
        tools:text="Rp 20.000"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/txvStock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        tools:text="Stok (10)"
        android:textSize="12sp"
        android:gravity="center"
        />

</LinearLayout>