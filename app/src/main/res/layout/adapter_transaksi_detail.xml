<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/colorPrimary">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <com.infinityandroid.roundedimageview.RoundedImageView
            android:id="@+id/imgProduct"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:adjustViewBounds="true"
            app:corner_radius="10"
            android:src="@drawable/img_no_image"
            />
        <TextView
            android:id="@+id/txtCategori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imgProduct"
            tools:text="Makanan"
            android:textColor="@color/colorWhite"
            />
        <TextView
            android:id="@+id/txtNameProduk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imgProduct"
            android:layout_below="@+id/txtCategori"
            tools:text="Le Minerale"
            android:textColor="@color/colorWhite"
            />
        <TextView
            android:id="@+id/txtPrice"
            android:layout_toEndOf="@+id/imgProduct"
            android:layout_below="@+id/txtNameProduk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            tools:text="Rp.4.0000 x 4"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txtTotal"
            android:layout_toEndOf="@+id/imgProduct"
            android:layout_below="@+id/txtPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            tools:text="Rp.16.000"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"/>





    </RelativeLayout>
</androidx.cardview.widget.CardView>